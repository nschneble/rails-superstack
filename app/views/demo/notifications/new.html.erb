<div class="w-full sm:ml-11 mt-[70] mb-[52] text-white overflow-y-scroll">
  <div class="max-w-[650] mx-auto">
    <h1 class="mx-3 sm:mx-0 mt-8 sm:mt-[50] mb-4 font-semibold text-3xl tracking-tight">System Notifications</h1>
    <p class="mx-3 sm:mx-0 mb-6 text-slate-100">Send a global in-app toast to all visitors, including anonymous sessions.</p>

    <%= form_with url: demo_system_notifications_path, scope: :system_notification, class: "mx-3 sm:mx-0" do |form| %>
      <%= form.label :message, "Message", class: "block mb-2 text-sm font-semibold" %>
      <%= form.text_area :message,
                         required: true,
                         rows: 5,
                         maxlength: 500,
                         class: "w-full px-3 py-2 bg-white text-slate-900 border border-slate-300 rounded-md shadow-md focus:outline-hidden focus:ring-2 focus:ring-amber-400" %>
      <%= form.submit "Send notification", class: "mt-3 px-3 py-2 rounded-md bg-emerald-700 hover:bg-emerald-800 text-white font-medium cursor-pointer" %>
    <% end %>
  </div>
</div>
